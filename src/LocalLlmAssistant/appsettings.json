{
  "ConnectionStrings": {
    "Default": "Data Source=App_Data/app.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Rag": {
    "ChunkSize": 800,
    "FtsCandidates": 200,
    "TopK": 4,
    "MmrLambda": 0.5
  },
  "Llm": {
    "OllamaBaseUrl": "http://localhost:11434",
    "LmStudioBaseUrl": "http://localhost:1234/v1"
  },
  "Chain": {
    "Models": [
      {
        "Id": "reasoner",
        "Name": "推論エキスパート",
        "Backend": "ollama",
        "Model": "qwen2.5-coder:7b",
        "SystemPrompt": "あなたは論理的思考と問題解決のエキスパートです。複雑な問題を段階的に分析し、詳細な思考過程を示しながら解決策を提案してください。",
        "Temperature": 0.7,
        "MaxTokens": 2048,
        "IsEnabled": true
      },
      {
        "Id": "synthesizer",
        "Name": "統合アシスタント",
        "Backend": "ollama",
        "Model": "qwen2.5-coder:7b",
        "SystemPrompt": "あなたは情報を統合し、簡潔で実用的な回答を提供するアシスタントです。複雑な情報を整理し、ユーザーにとって価値のある形で提示してください。",
        "Temperature": 0.5,
        "MaxTokens": 1024,
        "IsEnabled": true
      },
      {
        "Id": "creative",
        "Name": "創造的アシスタント",
        "Backend": "ollama",
        "Model": "qwen2.5-coder:7b",
        "SystemPrompt": "あなたは創造的で革新的なアイデアを生み出すアシスタントです。既存の枠組みにとらわれず、新しい視点から問題にアプローチしてください。",
        "Temperature": 0.9,
        "MaxTokens": 1536,
        "IsEnabled": true
      }
    ],
    "MaxIterations": 5,
    "EnableCoT": true,
    "CoTInstruction": "思考過程を段階的に示し、各ステップで何を考えているかを明確にしてください。"
  }
}
